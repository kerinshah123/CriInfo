<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".More.MyTeamTabs.MyTeamInfo"
    android:orientation="vertical">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/teamImage"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo1"
        android:scaleType="fitCenter"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="3dp">
    </com.mikhaellopez.circularimageview.CircularImageView>
    <TextView
        android:id="@+id/myteamName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="20dp"></TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:alpha="0.3"></View>
    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myTeamTab">
        <com.google.android.material.tabs.TabItem
            android:id="@+id/myteamInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/myteamMatches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Matches" />
        <com.google.android.material.tabs.TabItem
            android:id="@+id/myteamPlayers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Players" />
    </com.google.android.material.tabs.TabLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:alpha="0.3">

    </View>
    <FrameLayout
        android:id="@+id/frame_myTeam"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>