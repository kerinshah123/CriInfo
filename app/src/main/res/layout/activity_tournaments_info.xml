<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    tools:context=".More.TournamentsTabs.TournamentsInfo"
        android:orientation="vertical">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/tourImage"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo1"
            android:scaleType="fitCenter"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="3dp">
        </com.mikhaellopez.circularimageview.CircularImageView>
        <TextView
            android:id="@+id/tourName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tourTab">
            <com.google.android.material.tabs.TabItem
                android:id="@+id/tourSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Schedule" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tourTeams"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teams" />
            <com.google.android.material.tabs.TabItem
                android:id="@+id/tourPointtable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pointtable" />
            <com.google.android.material.tabs.TabItem
                android:id="@+id/tourAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About" />
        </com.google.android.material.tabs.TabLayout>

        <FrameLayout
            android:id="@+id/frame_Tournament"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>